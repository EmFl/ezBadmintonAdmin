{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Watch Flutter Analyzer",
        "type": "flutter",
        "command": "flutter",
        "args": [
          "analyze",
          "--watch",
          "--write=analyzer_problems.log"
        ],
        "group": "none",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        },
        "problemMatcher": []
      },
      {
        "label": "Run pocketbase server",
        "type": "shell",
        "command": "pocketbase serve",
        "group": "none",
        "options": {
          "cwd": "${workspaceRoot}/../../pocketbase"
        },
        "presentation": {
          "reveal": "always",
          "panel": "new"
        },
        "problemMatcher": []
      },
      {
        "type": "dart",
        "command": "dart",
        "args": [
          "run",
          "build_runner",
          "build"
        ],
        "options": {
          "cwd": "${workspaceRoot}/packages/collection_repository"
        },
        "problemMatcher": [
          "$dart-build_runner"
        ],
        "group": "build",
        "label": "run collection model code-gen"
      }
    ]
  }