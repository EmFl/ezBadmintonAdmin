{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Watch Flutter Analyzer",
        "type": "shell",
        "command": "flutter analyze --watch --write=analyzer_problems.log",
        "group": "none",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        },
        "problemMatcher": []
      },
      {
        "label": "Run pocketbase server",
        "type": "shell",
        "command": "pocketbase serve",
        "group": "none",
        "options": {
          "cwd": "${workspaceRoot}/../../pocketbase"
        },
        "presentation": {
          "reveal": "always",
          "panel": "new"
        },
        "problemMatcher": []
      },
    ]
  }